#include<iostream>
#include<iomanip>
using namespace std;

void setFrame()
{
   color(5);
   getCoord(30 ,1);
   cout<<"    < 俄羅斯方塊遊戲 >"<<endl<<endl;
   color(10);

   // 主要框架
   int x = LF_up_x ,y = 3; 
   //橫向邊上下兩條邊
   for(int i = 0; i < 30; ++i) {
       getCoord(x ,2);  vis[x][2] = true;  cout<<"□";
       getCoord(x ,23); vis[x][23] = true; cout<<"□";
       x += 2;
   }

   //豎向兩條邊和小框左邊豎線
   for(int i = 0; i < 21; ++i) {
       getCoord(LF_up_x ,y) ; vis[LF_up_x][y] = true ; cout<<"□" ;
       getCoord(71 ,y) ;      vis[71][y] = true ; cout<<"□" ;
       getCoord(51 ,y) ;      vis[51][y] = true ; cout<<"□" ;
       y += 1 ;
   }
